{
  "name": "oblak/transliterator",
  "description": "Transliterates text from cyrilic to latin and vice versa",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "transliteration",
    "transliterator",
    "serbian",
    "serbian-transliteration",
    "latinisation"
  ],
  "authors": [
    {
      "name": "Sibin Grasic",
      "email": "i.am@sib.ing",
      "homepage": "https://sib.ing",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/oblakstudio/transliterator/issues"
  },
  "require": {
    "php": ">=8.0"
  },
  "require-dev": {
    "oblak/wordpress-coding-standard": "^1.2",
    "phpbench/phpbench": "^1.4",
    "phpstan/extension-installer": "^1.4",
    "phpstan/phpstan": "^2.0",
    "phpunit/phpunit": "^10"
  },
  "replace": {
    "sgi/transliterator": "*"
  },
  "autoload": {
    "psr-4": {
      "Oblak\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Oblak\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    },
    "platform": {
      "php": "8.1"
    },
    "sort-packages": true
  },
  "scripts": {
    "bench": "phpbench run --report=default",
    "test": "phpunit tests/TransliteratorTest.php"
  }
}
